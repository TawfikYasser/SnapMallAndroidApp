<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Settings">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:background="@color/White"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/toolbar_layout_settings"
            android:tooltipText="Toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="2dp"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:clickable="true"
                android:background="@drawable/draw_ripple"
                android:id="@+id/back_settings"
                android:tooltipText="Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:src="@drawable/back"
                android:layout_centerVertical="true"/>


            <TextView
                android:id="@+id/settings_txt"
                android:fontFamily="@font/noto_reg"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:tooltipText="Settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Settings"
                />

        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/genTxt"
        android:layout_margin="16dp"
        android:textColor="@color/black"
        android:text="Gender"
        android:fontFamily="@font/noto_reg"
        android:textSize="18sp"
        android:gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"/>
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        app:selectionRequired="true"
        android:layout_margin="5dp"
        app:singleSelection="true"
        android:id="@+id/toggle_btn_gender"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button1s"
            android:fontFamily="@font/noto_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            style="?attr/materialButtonOutlinedStyle"
            />
        <Button
            android:id="@+id/button2s"
            android:fontFamily="@font/noto_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            style="?attr/materialButtonOutlinedStyle"
            />
        <Button
            android:fontFamily="@font/noto_reg"
            android:id="@+id/button3s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            style="?attr/materialButtonOutlinedStyle"
            />
    </com.google.android.material.button.MaterialButtonToggleGroup>
    <Button
        android:id="@+id/save_settings"
        android:layout_margin="25dp"
        android:text="Save"
        android:fontFamily="@font/noto_reg"
        android:textStyle="bold"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>
    <TextView
        android:id="@+id/mLangTxt"
        android:layout_margin="16dp"
        android:textColor="@color/black"
        android:text="Language"
        android:fontFamily="@font/noto_reg"
        android:textSize="18sp"
        android:gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"/>
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        app:selectionRequired="true"
        android:layout_margin="5dp"
        app:singleSelection="true"
        android:id="@+id/toggle_btn_lang"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button1l"
            android:fontFamily="@font/noto_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="En"
            style="?attr/materialButtonOutlinedStyle"
            />
        <Button
            android:id="@+id/button2l"
            android:fontFamily="@font/noto_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ar"
            style="?attr/materialButtonOutlinedStyle"
            />

    </com.google.android.material.button.MaterialButtonToggleGroup>
    <Button
        android:id="@+id/save_settings_lang"
        android:layout_margin="25dp"
        android:text="Save"
        android:fontFamily="@font/noto_reg"
        android:textStyle="bold"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>

    <Button
        android:layout_margin="16dp"
        android:textAlignment="center"
        android:gravity="center"
        android:fontFamily="@font/noto_reg"
        android:layout_gravity="center"
        android:id="@+id/contact_us_btn"
        android:text="Contact Us"
        android:textAllCaps="false"
        app:icon="@drawable/ic_email_black_24dp"
        android:layout_width="wrap_content"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_margin="16dp"
        android:id="@+id/terms_btn"
        android:fontFamily="@font/noto_reg"
        android:text="Terms Of Usage"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_insert_drive_file_black_24dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"/>
    <TextView
        android:id="@+id/snT"
        android:fontFamily="@font/noto_reg"
        android:tooltipText="Snap Mall 2020"
        android:textColor="@color/colorPrimary"
        android:text="Snap Mall"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
</LinearLayout>